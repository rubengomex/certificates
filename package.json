{
  "name": "advanced-css-and-sass",
  "version": "1.0.0",
  "description": "Advanced css and sass Udemy course.",
  "main": "index.js",
  "engines": {
    "node": "8.14.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "watch:sass": "node-sass sass/main.sass dist/css/main.css -w --output-style compact",
    "dev:server": "live-server",
    "start": "npm-run-all --parallel dev:server watch:sass",
    "compile:sass": "node-sass sass/main.sass dist/css/main.css --output-style compact",
    "concat:css": "concat -o dist/css/main.css dist/css/icon-font.css dist/css/main.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' dist/css/main.css -o dist/css/main.css",
    "compress:css": "node-sass dist/css/main.css dist/css/main.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "keywords": [
    "udemy",
    "certificate",
    "css",
    "html",
    "sass"
  ],
  "author": "RÃºben Gomes <gomesruben21@gmail.com> (https://rubengomex.github.io/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rubengomex/certificates.git"
  },
  "bugs": {
    "url": "https://github.com/rubengomex/certifcates/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1"
  }
}
